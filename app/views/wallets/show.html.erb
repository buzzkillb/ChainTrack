<ul class="list-group list-group-flush">
  <li class="list-group-item bg-light">
    <a href="https://denariusexplorer.org/address/<%= @wallet.address %>" target="_blank">
      DNR <%= number_with_precision(@wallet.dnr_earned, precision: 8) %>
    </a>
  </li>
  <li class="list-group-item bg-light">
    <%= number_to_currency(@wallet.secondary_earned, unit: @wallet.track.currency_unit, precision: @wallet.track.currency_precision, format: '%u %n') %>
  </li>
  <li class="list-group-item bg-light">
    <button type="button" class="btn btn-primary btn-sm" data-container="body"
    data-toggle="popover" data-placement="bottom" data-html="true"
    data-content="<%=h render partial: 'address', locals: { wallet: @wallet } %>">
      Show Address
    </button>
  </li>
</ul>
