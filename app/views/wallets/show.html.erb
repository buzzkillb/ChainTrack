<ul class="list-group list-group-flush">
  <li class="list-group-item bg-light"><%= number_with_precision(@wallet.chc_earned, precision: 8) %> CHC</li>
  <li class="list-group-item bg-light"><%= number_to_currency(@wallet.usd_earned) %></li>
  <li class="list-group-item bg-light">
    <button type="button" class="btn btn-primary" data-container="body"
    data-toggle="popover" data-placement="bottom" data-html="true"
    data-content="<%=h render partial: 'address', locals: { wallet: @wallet } %>">
      Show Address
    </button>
  </li>
</ul>
