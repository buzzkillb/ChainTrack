<span class="last-payout">
  <% if wallet.last_changed.present? %>
    <span data-toggle="tooltip" data-placement="bottom" class="badge badge-<%= get_badge_details(wallet)[:icon] %>"
    title="Balanced last changed on (<%= get_badge_details(wallet)[:text] %>)">
      <span class="utc-date" data-date="<%= wallet.last_changed.strftime('%m/%d/%y %H:%M:%S UTC') %>">
        <i class="fa fa-cog fa-spin fa-1x fa-fw"></i>
      </span>
    </span>
  <% end %>
</span>
